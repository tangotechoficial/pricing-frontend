{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@app/*": [
          "app/*",
      ],
      "@models/*": [
        "app/models/*",
      ],
      "@helpers/*": [
        "app/helpers/*",
      ],
      "@pipes/*": [
        "app/pipes/*"
      ],
      "@services/*": [
        "app/services/*",
      ],
      "@env/*": [
        "environments/*",
      ],
      "@datasources/*": [
        "assets/datasources/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
